{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "appAssociation": "AUTO",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/app/**", "dynamicLinks": true },
      {
        "source": "/api/hello",
        "function": "helloWorld"
      },
      {
        "source": "/api/iaphub",
        "function": "iaphubSubscriptionNoty"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
